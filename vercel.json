{
    "version": 2,
    "buildCommand": "cd frontend && npm install && npm run build",
    "installCommand": "npm install",
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/public/dist/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/public/dist/index.html"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }